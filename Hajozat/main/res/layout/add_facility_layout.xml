<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtFacilityName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/powerfulColor"
            android:hint="Facility Name"
            android:textColor="@color/powerfulColor"
            android:textSize="34dp"
            android:inputType="text"
            android:textAllCaps="false"
            android:textCursorDrawable="@null"
            app:met_baseColor="@color/powerfulColor"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/powerfulColor"
            app:met_singleLineEllipsis="true"
            android:layout_margin="4dp"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtFacilityNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/powerfulColor"
            android:hint="Facility Number"
            android:textColor="@color/powerfulColor"
            android:textSize="34dp"
            android:inputType="text"
            android:textAllCaps="false"
            android:textCursorDrawable="@null"
            app:met_baseColor="@color/powerfulColor"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/powerfulColor"
            app:met_singleLineEllipsis="true"
            android:layout_margin="4dp"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>